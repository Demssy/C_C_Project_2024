@model ProductVM
<div class="card shadow border-0 my-4">
<div class=" card-header bg-primary  bg-gradient m-lg-0 py-3">
    <div class="row">
        <div class="col-12 text-center">
            <h2 class="text-white py-2">@(Model.Product.Id!=0?"Update":"Create") Product</h2>
        </div>
    </div>
</div>
<div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="Product.Id" hidden />
            @* <input asp-for="Product.ImageUrl" hidden /> *@
            <div class="row">
                <div class="col-10">
                    <div class="border-primary p-3">
                        @* <div asp-validation-summary="ModelOnly"></div> *@
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Product.ShoeModel" class="form-control border-0 shadow text-white" />
                            <label asp-for="Product.ShoeModel" class="ms-2 text-white"></label>
                            <span asp-validation-for="Product.ShoeModel" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Product.Brand" class="form-control border-0 shadow text-white" />
                            <label asp-for="Product.Brand" class="ms-2 text-white"></label>
                            <span asp-validation-for="Product.Brand" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Product.StockCount" class="form-control border-0 shadow text-white" />
                            <label asp-for="Product.StockCount" class="ms-2 text-white"></label>
                            <span asp-validation-for="Product.StockCount" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <select asp-for="Product.AgeGroup" asp-items="@Model.AgeGroupList" class="form-select border-0 shadow text-white">
                                <option disabled selected>--Select Age Group--</option>
                            </select>
                            <label asp-for="Product.AgeGroup" class="ms-2 text-white"></label>
                            <span asp-validation-for="Product.AgeGroup" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <select asp-for="Product.Gender" asp-items="@Model.GenderList" class="form-select border-0 shadow text-white">
                                <option disabled selected>--Select Gender--</option>
                            </select>
                            <label asp-for="Product.Gender" class="ms-2 text-white"></label>
                            <span asp-validation-for="Product.Gender" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Product.ListPrice" class="form-control border-0 shadow text-white" />
                            <label asp-for="Product.ListPrice" class="ms-2 text-white"></label>
                            <span asp-validation-for="Product.ListPrice" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Product.Price" class="form-control border-0 shadow text-white" />
                            <label asp-for="Product.Price" class="ms-2 text-white"></label>
                            <span asp-validation-for="Product.Price" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Product.Price50" class="form-control border-0 shadow text-white" />
                            <label asp-for="Product.Price50" class="ms-2 text-white"></label>
                            <span asp-validation-for="Product.Price50" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Product.Price100" class="form-control border-0 shadow text-white" />
                            <label asp-for="Product.Price100" class="ms-2 text-white"></label>
                            <span asp-validation-for="Product.Price" class="text-danger"></span>
                        </div>
                        <div class="py-2 col-12">
                            <label asp-for="Product.Description" class="ms-2 text-white"></label>
                            <textarea asp-for="Product.Description" class="form-control border-0 shadow text-white text-muted"></textarea>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Product.Size" class="form-control border-0 shadow text-white" />
                            <label asp-for="Product.Size" class="ms-2 text-white"></label>
                            <span asp-validation-for="Product.Size" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Product.Color" class="form-control border-0 shadow text-white" />
                            <label asp-for="Product.Color" class="ms-2 text-white"></label>
                            <span asp-validation-for="Product.Color" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <select asp-for="Product.CategoryId" asp-items="@Model.CategoryList" class="form-select border-0 shadow text-white">
                                <option disabled selected>--Select Category--</option>
                            </select>
                            <label asp-for="Product.CategoryId" class="ms-2 text-white"></label>
                            <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input type="file" name="files" class="form-control border-0 shadow text-white" multiple />
                            <label asp-for="Product.ProductImages" class="ms-2 text-white"></label>
                        </div>


                        <div class="row pt-2">
                            <div class="col-6 col-md-3">
                                @if (Model.Product.Id != 0)
                                {
                                    <button type="submit" class="btn btn-success form-control border-primary">Update</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control border-primary">Create</button>
                                }
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary border-primary form-control">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-2">

                    @if(Model.Product.ProductImages != null)
                    {
                        foreach (var image in Model.Product.ProductImages)
                        {
                            <div class="border p-1 m-2 text-center">
                                <img src="@image.ImageUrl" width="100%"
                                     style="border-radius:5px: border:1px solid #bbb9b9"/>
                                     <a asp-action="DeleteImage" class="btn btn-danger" asp-route-imageId="@image.Id">
                                    <i class="bi bi-trash-fill"></i> Delete
                                    </a>
                            </div>
                        }
                    }
                </div>
            </div>
        </form>
</div>
</div>



 @section Scripts{
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'anchor autolink charmap codesample emoticons lists  table visualblocks wordcount',
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough  | align lineheight | checklist numlist bullist indent outdent',
        });
    </script>
     @{
         <partial name="_ValidationScriptsPartial"/>
     }
 }