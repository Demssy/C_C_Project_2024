@model ShoppingCard


<form method="post">
    <br />
    <input type="hidden" asp-for="ProductId" />
    <input type="hidden" asp-for="@Model.Count" />
    <div class="container">
        <div class="card shadow border-0">

            <div class="card-header bg-secondary bg-gradient text-light ml-0 py-4">
                <div class="row px-4">
                    <div class="col-6">
                        <h5 class="pt-2 text-white">
                            Order Summary
                        </h5>

                        <a asp-action="Details" asp-route-Id="@Model.Product.Id" class="btn btn-primary bg-gradient mb-3 mt-2 fw-semibold btn-sm text-uppercase">
                            <small>Back to Details</small>
                        </a>

                    </div>

                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12 col-lg-6 pb-4">
                            <div class="row">
                                <h4 class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="text-info">Shipping Details:</span>
                                </h4>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">
                                    <label>Name</label>
                                </div>
                                <div class="col-9">
                                    <input asp-for="@Model.ApplicationUser.Name" class="form-control" />
                                    <span asp-validation-for="@Model.ApplicationUser.Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">
                                    <label>Phone</label>
                                </div>
                                <div class="col-9">
                                    <input asp-for="@Model.ApplicationUser.PhoneNumber" class="form-control" />
                                    <span asp-validation-for="@Model.ApplicationUser.PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">
                                    <label>Street Address</label>
                                </div>
                                <div class="col-9">
                                    <input asp-for="@Model.ApplicationUser.StreetAdress" class="form-control" />
                                    <span asp-validation-for="@Model.ApplicationUser.StreetAdress" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">
                                    <label>City</label>
                                </div>
                                <div class="col-9">
                                    <input asp-for="@Model.ApplicationUser.City" class="form-control" />
                                    <span asp-validation-for="@Model.ApplicationUser.City" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">
                                    <label>State</label>
                                </div>
                                <div class="col-9">
                                    <input asp-for="@Model.ApplicationUser.State" class="form-control" />
                                    <span asp-validation-for="@Model.ApplicationUser.State" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">
                                    <label>Postal Code</label>
                                </div>
                                <div class="col-9">
                                    <input asp-for="@Model.ApplicationUser.PostalAdress" class="form-control" />
                                    <span asp-validation-for="@Model.ApplicationUser.PostalAdress" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-5 offset-lg-1">
                            <h4 class="d-flex justify-content-between align-items-center mb-3">
                                <span class="text-info">Order Summary:</span>
                            </h4>
                            <ul class="list-group mb-3">


                                <li class="list-group-item d-flex justify-content-between">
                                    <div>

                                        @if (Model.Product.Discount > 0)
                                        {
                                            <h6 class="my-0 text-white">@Model.Product.ShoeModel <span class="badge bg-success">Sale @Model.Product.Discount.ToString("P0")</span></h6>
                                            <small class="text-muted">Quantity: @Model.Count</small>
                                        }
                                        else
                                        {
                                            <h6 class="my-0 text-white">@Model.Product.ShoeModel </h6>
                                            <small class="text-muted">Quantity: @Model.Count</small>
                                        }

                                    </div>
                                    @if (Model.Product.Discount > 0)
                                    {
                                        <span class="text-muted">@Model.Price.ToString("c")</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">@((Model.Price * Model.Count).ToString("c"))</span>
                                    }

                                </li>

                                <li class="list-group-item d-flex justify-content-between bg-light">
                                    <small class="text-info">Total (ILS)</small>
                                    <strong class="text-info">@((Model.Price * Model.Count).ToString("c"))</strong>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-12 col-md-8 pt-2">
                        <p style="color:maroon; font-size:14px;">
                            Estimate Arrival Date:
                            @DateTime.Now.AddDays(7).ToShortDateString() - @DateTime.Now.AddDays(14).ToShortDateString()
                        </p>
                    </div>
                    <div class="col-12 col-md-4">
                        <button type="submit" asp-action="BuyNowPOST" class="btn btn-primary form-control">Place Order</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>